  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <a class="navbar-brand shopping-Frenzy" href="#">Shopping Frenzy</a>
      <button
        class="navbar-toggler"
        type="button"
        data-toggle="collapse"
        data-target="#navbarNav"
        aria-controls="navbarNav"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item active">
            <a class="nav-link" href="#">Today's Deals</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">Gift Cards & Top Up</a>
          </li>
          <li class="nav-item dropdown">
            <a
              class="nav-link dropdown-toggle"
              href="#"
              id="navbarDropdown"
              role="button"
              data-toggle="dropdown"
              aria-haspopup="true"
              aria-expanded="false"
            >
              <b>Clothing</b>
            </a>
            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
              <a id="tshirts-link" class="dropdown-item" href="#">T-shirts</a>
              <a id="hats-link" class="dropdown-item" href="#">Hats</a>
              <a id="sports-link" class="dropdown-item" href="#">Sports</a>
              <a id="boxing-link" class="dropdown-item" href="#">Boxing</a>
              <a id="jeans-link" class="dropdown-item" href="#">Jeans</a>
            </div>
          </li>
        </ul>
        <form action="/search" method="GET">
          <div class="input-group">
            <input
              type="search"
              class="form-control rounded"
              placeholder="Search"
              aria-label="Search"
              aria-describedby="search-addon"
              name="query"
            />
            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">
              Search
            </button>
          </div>
        </form>
        <ul class="navbar-nav ml-auto">
          <li class="nav-item">
            {{#if logged_in}}
              <button class="no-button" id="logout">logout</button>
            {{else}}
              <a class="nav-link" href="/login">Sign in</a>
            {{/if}}
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">Returns & Orders</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">Cart</a>
          </li>
        </ul>
      </div>
    </nav>

